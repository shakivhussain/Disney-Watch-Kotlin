<resources>
    <!-- Base application theme. -->
    <style name="Theme.DisneyWatch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/darkBlue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>


        <item name="colorBackgroundPrimary">@color/headerWhite</item>
        <item name="colorHeading">@color/blackLight</item>
        <item name="colorDarkGrayToLightGray">#989898</item>
        <item name="colorBlackToWhite">@color/headerWhite</item>
        <item name="subtitleColor">@color/lightSilverSubtitle</item>
        <item name="titleColor">@color/darkGrayTitle</item>
        <item name="electricPurple">@color/electricPurpleLight</item>
        <item name="brightSkyBlue">@color/brightSkyBlueLight</item>
        <item name="vibrantOrange">@color/vibrantOrangeLight</item>
    </style>


</resources>